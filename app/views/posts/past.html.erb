<%- model_class = Post -%>
<div class="page-header">
<h1>23rd Magagine</h1>
</div>
<div class = "top-image" style = "text-align:center" >
  <%= image_tag '/images/natsuki-top.png' %>
  </div>

  <div class = "pm" style = "text-align:center;">
      <%= image_tag '/images/pm.png'%>
  </div>

    <% @posts.each do |post| %>

  <div class = "botton-image">
    <%= image_tag '/images/disk.png' %>
  </div>

  <div class = "message">
  <div class = "message-name">
    <p><%= post.name %></p>
  </div>
  <div class ="message-date">
    <% send_date = post.send_date + 1 %>
    <i><%= send_date.day %>. <%= send_date.strftime("%B") %> <%= send_date.year %></i>  </div>
  <div class ="message-content">
    <p><%= post.content %></p>
  </div>

    <% end %>

<div class = "paginate" style ="text-align:center;margin-top:40px">
<%= paginate @posts %>
</div>



</div>

<hr>



